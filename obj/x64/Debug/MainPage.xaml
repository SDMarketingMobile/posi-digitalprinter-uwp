<Page x:ConnectionId='1'
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POSIDigitalPrinter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Custom="using:POSIDigitalPrinter.View"
    x:Class="POSIDigitalPrinter.MainPage"
    mc:Ignorable="d"
    Background="LightGray"
    IsEnabled="True"
    IsTabStop="True"
    TabIndex="1"
                        
                                  >

    <Grid x:ConnectionId='2'
        x:Name="grid"
        Background="LightGray"
        Margin="5" >
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="320*"/>
        </Grid.RowDefinitions>

        <TextBlock x:ConnectionId='3' Name="tbAtendimento"
                   Grid.Row="0"
                   HorizontalAlignment="Left" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Margin="10,7,0,0">
            <Run Text="Total Atendimento :" FontSize="30"/><Run/>
        </TextBlock>

        <TextBlock x:ConnectionId='4' x:Name="tbMedia" 
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,7,0,0">
            <Run FontSize="30" Text="Média de Atendimento: 7:00"/>
        </TextBlock>

        <TextBlock x:ConnectionId='5' x:Name="tbPag"
                   Grid.Row="0"
                   VerticalAlignment="Top"
                   Margin="0,7,10,0"
                   HorizontalAlignment="Right"
                   FontSize="30" 
                   Text="Conta: 0/0">
        </TextBlock>

        <TextBlock x:ConnectionId='6' x:Name="tbPor"
                   Grid.Row="0"
                   VerticalAlignment="Top"
                   Margin="0,7,200,0"
                   HorizontalAlignment="Right" 
                   Width="57">
            <Run FontSize="30" Text="85%"/>
        </TextBlock>


        <GridView x:ConnectionId='7' x:Name="ctrlGridView" 
                  Grid.Row="1" 
                  Margin="2" 
                  SelectionMode="Single"
                  IsItemClickEnabled="False"
                                                                  >
        </GridView>

        <ContentDialog x:ConnectionId='8' x:Name="MyContentDialog"
                        VerticalAlignment="Stretch"
                        Title="Configurações"
                        IsPrimaryButtonEnabled="{Binding IsChecked, ElementName=checkBoxAgree, Mode=OneWay}"
                        Grid.Row="2"
                        Visibility="Visible">

            <Grid Width="370" Height="150" >

                <ListView x:ConnectionId='9' 
                    x:Name="lvConfig"
                                                 >

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Padding" Value="0,0,0,0"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListViewItem>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch">
                            <TextBlock x:ConnectionId='11'
                                x:Name="tbViewMode"
                                Text="Exibir as contas em lista :" 
                                FontSize="19" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top" 
                                Margin="0,10,0,0"/>

                            <ToggleSwitch x:ConnectionId='12' 
                                x:Name="tgViewMode"
                                HorizontalAlignment="Left" 
                                Margin="220,4,0,0" 
                                VerticalAlignment="Top" 
                                Width="93" 
                                Height="38"
                                                              />
                        </Grid>

                    </ListViewItem>
                    <ListViewItem>
                        <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch">
                            <TextBlock 
                                Text="Exibir as contas em lista :" 
                                FontSize="19" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top" 
                                Margin="0,10,0,0"/>

                            <ToggleSwitch x:ConnectionId='10'
                                HorizontalAlignment="Left" 
                                Margin="220,4,0,0" 
                                VerticalAlignment="Top" 
                                Width="93" 
                                Height="38" 
                                                              />
                        </Grid>
                    </ListViewItem>
                    <ListViewItem>
                        <Button 
                            Content="Salvar"
                            FontSize="20"
                            Width="370"
                            Height="37"/>
                    </ListViewItem>
                </ListView>
            </Grid>

        </ContentDialog>
        <RelativePanel HorizontalAlignment="Left" Height="100" Margin="648,436,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100"/>

    </Grid>




</Page>

